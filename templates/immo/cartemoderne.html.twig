
{#{%set l=random(3,3)%}#}
{%set l=4 %}
<div class="card-mb-3">
    <div class="card-body carte{{ l }}" style=" ">
        <img src="/images/pli.png" class="enluminure{{ l }}" style="z-index: 10;" alt="image">
        <img src="/images/orange.jpg" class="orange" style="z-index: 10;" alt="image">
        <img src="/images/orangec.jpg" class="orangec" style="z-index: 10;" alt="image">

        <p class="chevrondroit{{ l }}" >></p>
        <p class="chevrongauche{{ l }}"><</p>

        {%if biens.photos |length >3%}
            <div class="col cadre{{ l }}" >
                {%for photo in biens.photos %}
                    {%if loop.index <7 %}

                        <img src="{{ vich_uploader_asset(photo,'imageFile')}}" class="photocadre{{ l }}" style="z-index: 10;" >

                    {%endif%}


                {%endfor%}
            </div>
        {%else%}

            {% set images=["carre5.jpg", "carre4.jpg","carre2.jpg","carre3.jpg","carre1.jpg","carre6.jpg"]%}
            {%for photo in images %}

                <div class="col cadre{{ l }}" >
                    <img src="/images/{{photo}}" class="photocadre{{ l }}" style="z-index: 10;" alt="image">
                </div>



            {%endfor%}
        {%endif%}
        <div class=" chambre{{ l }}" >
            {%if biens.chambres %}
                <img src="{{vich_uploader_asset(biens, 'chambresFile')}}" class="ichambre{{ l }}" style="z-index: 10;" alt="image">
            {%else%}
                <img class="ichambre{{ l }}" src="/images/cchambre.jpg" alt="chambre"><br>
            {%endif%}

        </div>
        <div class="region{{ l }}" >
            {%if biens.regions%}
                <img src="{{vich_uploader_asset(biens, 'regionsFile')}}" class="iregion{{ l }}" style="z-index: 10;" alt="image">
            {%else%}
                <img class="ichambre{{ l }}" src="/images/cregion.jpg" alt="region"><br>
            {%endif%}
        </div>
        <div style="width:49%">
        <h5 class="card-title">
                <a href="{{path('bien',{id:biens.id,slug:biens.slug})}}" class='lien{{ l }}'><span class='medieval{{ l }}'>{{biens.titre[:1]}}</span>
                    {{biens.titre[1:]}}</a>
        </h5>
         <p class="card-text{{ l }} ville{{ l }}" style="">{{biens.ville}} ( {{biens.codepostal}} )
                <span class="card-text{{ l }} prix{{ l }}">{{biens.surface}} m²</span>
            <span class="card-text{{ l }} prix{{ l }}" style="">{{biens.prix}} €</span></p>
        </div>
        <div class="rens{{ l }}">
            
           
                <p class="card-text{{ l }} description" style="">{{biens.description}}</p>
                


        </div>
                <hr class="trait">
                 <hr class="trait"style="top:86%">
        <div class="date">
            <p class="card-text{{ l }} date{{ l }}" style="font-size: 0.7em;">En vente depuis le : {{biens.date|date('d-m-Y')}} </p>
        </div>

    </div>
</div>









