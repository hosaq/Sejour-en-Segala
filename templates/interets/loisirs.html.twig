{% extends 'interets/menuloisir.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/carte.css">
    <link href="https://fonts.googleapis.com/css?family=Italiana|ZCOOL+XiaoWei" rel="stylesheet"> 
   <link href="https://fonts.googleapis.com/css?family=Bubbler+One|Muli|Quicksand|Raleway|Tajawal" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet"> 
{% endblock %}
    
{% block contenu %}

    <div class="herbe" >
                        <img src="/images/herbe.jpg" class="transparent" style="z-index: 10;" alt="image">
    </div>
    <div class="italie" >
                        <img src="/images/carre6.jpg" class="transparente" style="z-index: 10;" alt="image">
    </div>

    <div class="jumbotron">
        <div class="container" style=' padding-left: 150px;'>
            {{form_start(form)}}
            <div class="form-row align-items-end">
                
                <div class="col">
                    {{form_row(form.nom)}}
                </div>
                
                <div class="col">
                    {{ form_row(form.address, {id: 'cherche_centre'}) }}
                </div>
               
                <div class="col">
                    {{ form_row(form.distance) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary" style='background-color: #5c4942; border-color: #322;'>Rechercher</button>
                    </div>
                </div>
            </div>
            {{form_end(form)}}
        </div>
    </div>      
    <div class="container mt-4">
        <h1 style=' margin-left: -2%'>Loisirs, centres d'intérêt, festivals, ... :</h1>
        <div class="row flex">
            {% for loisirs in loisir%}
                
                    <div class="col-md-4">
                        {%include 'interets/carteloisir.html.twig'%}
                    </div>
                
            {%endfor%}
        </div>
        <div class="pagination">
            {{knp_pagination_render(loisir)}}
        </div>
        
    </div>

           
            
          






{% endblock %}
{% block javascripts %}
    <script src="js/slidephotosloisirs.js"></script>
    
    {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('build/app.js') }}"></script>
        <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->
    
{% endblock %}